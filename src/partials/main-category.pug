mixin category(type, title, img, nav=[])
    div(class={
      "col-xl-4": type === 'small',
      'col-6': type === 'small' || type === 'big',
      'col-12 col-xl-4 px-xl-5 mt-5 mt-xl-0': type === 'medium'
    }).main-category(class="main-category-" + type)
        .row.h-100
            .col-12(class={
              "col-xl-8": type === 'big',
              "col-xl-6": type === 'small'
            })
                a.category-image.d-flex.bg-cover.h-xl-100(style="background-image: url(img/" + img + ")" href='#' class={
                  "ar-1-1": type !== 'medium',
                  "ar-2-1": type === 'medium'
                })
            .col-12.d-flex.flex-column(class={
              "col-xl-4 pl-xl-0": type === 'big',
              "col-xl-6 pl-xl-5": type === 'small'
            })
                h4.mt-4.mt-xl-0.mb-0.mb-2.pb-1(class={
                  "h5": type === 'small',
                  "pt-1 pt-xl-3 pl-0 h5 col-xl-8 h5": type === 'medium'
                })
                    a.text-body.text-decoration-none(href='#')!= title
                if type !== 'medium'
                    ul.nav.flex-column.mt-4.d-none.d-xl-flex
                        each val in nav
                            li.menu-item
                                a.nav-link.px-0.text-body.font-weight-light.pt-1.pb-1(href="#")= val

